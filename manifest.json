{
    "manifest_version": 3,
    "name": "CookieNuke",
    "version": "1.0",
    "description": "Automatically clears cookies from the browser at a set time. Toggle it on/off via toolbar.",
    "permissions": [
        "cookies",
        "alarms",
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "32": "icons/icon.png",
            "64": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "64": "icons/icon.png",
        "128": "icons/icon.png"
    }
}